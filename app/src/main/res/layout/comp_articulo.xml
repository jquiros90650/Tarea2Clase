<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCF6E7BE"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:padding="75dp"
        tools:srcCompat="@drawable/iphone_13_pro_gold_select" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_phonenumb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@+id/et_phone"
            tools:layout_editor_absoluteX="2dp"
            tools:text="iPhone 14" />

        <Button
            android:id="@+id/et_update"
            android:layout_width="149dp"
            android:layout_height="45dp"
            android:text="Comprar"
            android:textSize="12sp"
            app:icon="@android:drawable/ic_input_add"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="259dp" />

        <TextView
            android:id="@+id/et_phone"
            android:layout_width="406dp"
            android:layout_height="47dp"
            android:text="Comprar  ArtÃ­culo"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="31dp" />

        <EditText
            android:id="@+id/et_phonenumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:ems="10"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@+id/et_phone"
            tools:layout_editor_absoluteX="2dp"
            tools:text="$ 999" />

        <Button
            android:id="@+id/et_logout"
            android:layout_width="149dp"
            android:layout_height="45dp"
            android:text="Volver"
            app:icon="@android:drawable/ic_input_delete"
            tools:layout_editor_absoluteX="246dp"
            tools:layout_editor_absoluteY="259dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>