<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCF6E7BE"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:padding="75dp"
        tools:srcCompat="@drawable/descarga" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <Button
            android:id="@+id/et_update"
            android:layout_width="149dp"
            android:layout_height="45dp"
            android:text="Buscar"
            android:textSize="12sp"
            app:icon="?android:attr/actionModeWebSearchDrawable"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="259dp" />

        <TextView
            android:id="@+id/et_phone"
            android:layout_width="406dp"
            android:layout_height="47dp"
            android:text="Buscar  Artículo"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="31dp" />

        <EditText
            android:id="@+id/et_phonenumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@+id/et_phone"
            tools:layout_editor_absoluteX="2dp"
            tools:text="Ingrese el nombre del artículo" />

        <Button
            android:id="@+id/et_logout"
            android:layout_width="149dp"
            android:layout_height="45dp"
            android:text="Logout"
            tools:layout_editor_absoluteX="246dp"
            tools:layout_editor_absoluteY="259dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>